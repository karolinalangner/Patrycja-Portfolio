<%= simple_form_for(@article) do |f| %>

  <!-- [...] -->

  <div class="form-inputs">
    <%= f.input :title, label: "Tytuł" %>
  </div>
  <div class="form-inputs">
    <%= f.input :tagline, hint: "Tagline, pojawi sie pod tytulem na karcie posta, sna stronie bloga" %>
  </div>
  <div class="form-inputs">
    <%= f.input  :cover, as: :file, hint: "Okladka dla posta, pojawi się też pod tytułem na stronie posta" %>
  </div>


  <!-- insert these three line of code below -->
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>

  <div class="form-actions">
  <br><br>
    <%= f.button :submit, class:"btn btn-primary" %>
  </div>
<% end %>