<%= simple_form_for(@article) do |f| %>

  <!-- [...] -->

  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  <div class="form-inputs">
    <%= f.input :tagline, hint: "Tagline, pojawi sie pod tytulem" %>
  </div>
  <div class="form-inputs">
    <%= f.input  :cover, as: :file, hint: "Okladka dla posta" %>
  </div>


  <!-- insert these three line of code below -->
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>