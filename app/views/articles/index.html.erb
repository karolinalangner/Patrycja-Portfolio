<p id="notice"><%= notice %></p>

<h2>Blog</h2>

  <div class="articles container">
    <% @articles.each do |article| %>
      <div class="card-article">
        <% if article.cover.attached? %>
          <%= cl_image_tag article.cover.key, width: 400, height: 250, crop: :fill %>
        <% end %>
        <h3><%= link_to article.title, article, class:"article-title" %></h3>
        <small><%= article.created_at.strftime("%d/%m/%Y") %></small>
      
      <% if user_signed_in? %>
      <div>
        <%= link_to 'Edytuj', edit_article_path(article) %>
        <%= link_to 'Usuń', article, method: :delete, data: { confirm: 'Na pewno?' } %>
      </div>
      <% end %>
    
    
      </div>  
  
           <% end %>
 
  </div>


<br>
<% if user_signed_in? %>
  <%= link_to 'Nowy artykuł', new_article_path %>
<% end %>